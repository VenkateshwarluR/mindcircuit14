pipeline {
    agent any

    stages {
        stage('clone code') {
            steps {
                echo 'cloning code from Github'
				git branch: 'main', url: 'https://github.com/VenkateshwarluR/mindcircuit14.git'
            }
        }
		
		stage('Build Code') {
            steps {
                echo 'Building the code with maven'
				sh 'mvn clean install'
            }
        }
		
		stage('Deploy in Server') {
            steps {
                echo 'Deploying the artifact in Tomcat web server'
				deploy adapters: [tomcat9(alternativeDeploymentContext: '', credentialsId: 'tomcat', path: '', url: 'http://44.193.212.95:8081/')], contextPath: 'facebook', war: '**/*.war'
            }
        }
    }
}
